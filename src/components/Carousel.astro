    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: stretch;
    color: white;
    pointer-events: auto; /* Zorgt ervoor dat de slides klikbaar zijn */
    min-height: 100%; /* Zorgt ervoor dat de slides 100% van de hoogte innemen */
    min-width: 100%; /* Zorgt ervoor dat de slides 100% van de breedte innemen */
    padding: 0;
    margin: 0;
    /* overflow: hidden; */
  }
  
  /* Control instellingen */
  .controls {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    z-index: 3; /* Boven beide carousels */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .controls-wrapper {
    display: flex;
    align-items: center
  }  

  .controls {
    z-index: 10;
    grid-column-gap: 0em;
    grid-row-gap: 1.5em;
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(1, 1, 1, .6));
    flex-wrap: wrap;
    justify-content: flex-end;
    align-items: center;
    display: flex;
    position: absolute;
    top: auto;
    bottom: 0%;
    left: 0%;
    right: 0%;
    padding: var(--site-padding);
  }
  .controls-wrapper{
    grid-column-gap: .5rem;
    grid-row-gap: .5rem;
    flex-wrap: wrap;
    flex: 0 auto;
    justify-content: flex-end;
    align-items: center;
    display: flex;
  }

  .control-button {
    backdrop-filter: blur(30px);
    color: #fff;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    flex: none;
    justify-content: center;
    align-items: center;
