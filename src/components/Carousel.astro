/* Algemene instellingen voor de carousel gallery */
  .carousel-gallery {
    display: flex;
    flex-direction: column;  
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }
  
  .carousels {
    padding:0;
    margin: 0;
    position: relative;
    width: 100%;
    height: 100%;
