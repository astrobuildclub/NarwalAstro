---
// Import Components & Scripts
import { Image } from 'astro:assets';

// Define Types
interface Props{
  name?: string;
  roles?: string[];
  photoSourceUrl?: string;
  photoAltText?: string;
  photoTitleText?: string;
}

// Define Vars
const {name, roles, photoSourceUrl, photoAltText, photoTitleText} = Astro.props;
---

<!-- Person -->
<div class="person">
  {photoSourceUrl &&
    <div class="person-photo"></div>
    <Image 
        src={photoSourceUrl}
        width="10";
        height="10";
        widths={[540, 960, 1440, 1920]}
        sizes={`(max-width: 360px) 540px, (max-width: 720px) 960px, (max-width: 1600px) 1440px, 1920px`}
        format='avif'
        alt={photoAltText || photoTitleText || ""} 
        title={photoTitleText || ""}
        class="person-photo-img"
    />
    }
     <div class="person-details">
        <h3 class="person-name">{name}</h3>
        <div class="roles">
          {roles && roles.length > 0 && (
            <h4 class="person-roles">
              {roles.map((role: any) => role.name).join(', ')}
            </h4>
          )}
        </div>
</div>


<style>
  h3.person-name, .person-roles {
    font-size: var(--fs--2);
    font-weight: 600;
    line-height: 133%;
  }

  .person-details{
    margin-top: var(--space-2xs);
  }

  .roles {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2xs);
    
  }

  .roles > * {
    
    
    opacity: 0.7;
    line-height: 112.5%;
  }
</style>