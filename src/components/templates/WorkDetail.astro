---
import Hero from '../Hero.astro'
import BlockRenderer from '../BlockRenderer.astro'

type Props = {
  data: any
}

const { data } = Astro.props

const projectHero = data.projectHero?.details
const projectClients = data.projectMeta?.projectClient?.nodes;
const projectCredits = data.projectMeta?.credits;
const projectContent = data.projectContent?.content

const heroData = {
    ...projectHero,
    clients: projectClients
}

---

<Hero data={heroData} />

{
  projectContent && (
    <article class="project">
      <BlockRenderer prefix="ProjectContent" blocks={projectContent} />
    </article>
  )
}

<!-- Credits, hier moet nog een block of astro file voor komen en worden opgemaakt -->
<div class="credits" set:html={projectCredits} />

<style>
  
  .project {
    padding: var(--site-padding);
    
  }

</style>
