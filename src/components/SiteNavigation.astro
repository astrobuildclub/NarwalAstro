  </div>
  <div class="block w-full lg:flex lg:w-auto lg:items-center">
    <ul class="text-sm lg:flex-grow">
      {
        menu.menuItems.nodes.map((menuItem: any) => {
          return (
            <li class="block mt-4 mr-4 text-teal-200 hover:text-white lg:mt-0 lg:inline-block">
              <a href={menuItem.uri || '/'}>{menuItem.label}</a>
            </li>
          )
        })
      }
    </ul>
  </div>
</nav>
<style>

nav{
  padding: var(--space-xs) var(--site-padding);
}

  .logo {
    width: 140px;
    color: white;
  }

  ul a {
    font-family: var(--font-body);
    font-weight: bold;
    color: var(--clr-white);
  }
</style>
