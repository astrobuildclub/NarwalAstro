---
type Props = {
  title?:string;
  content?: string;
  size?: string[];
};

const { title, content, size } = Astro.props;
let classes;

if (size && size.at(0) == "full") {
  classes = "w-full py-8 px-8 bg-black text-white";
} else {
  classes = "w-8/12 py-8 px-8";
}
---
{title &&
  <h2 set:html={title} />
}
<div set:html={content} class={classes} />