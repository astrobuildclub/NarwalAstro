---
type Props = {
  title?:string;
  content?: string;
  size?: string[];
};

const { title, content, size } = Astro.props;
let classes;

if (size && size.at(0) == "full") {
  classes = "";
} else {
  classes = "";
}
---
{title &&
  <h2 class="sectionTitle" set:html={title} />
}
<div set:html={content} class={classes} />