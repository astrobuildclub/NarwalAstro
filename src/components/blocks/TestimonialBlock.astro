---
type Props = {
  content: any;
}

// Define Vars
const { content } = Astro.props

console.log(content)
const { title, roleCompany, testimonial, img } = content
const { sourceUrl } = content.photo.node

---

<div>
    <pre>TestimonialBlock</pre>
   <p>{content.testimonial}</p>
    <div class="details">
         <img src={sourceUrl} alt="Testimonial Image" />
         <div class="person">
    <h3>{content.name}</h3>
    <h4>{content.roleCompany}</h4>
    </div>
    </div>
    
</div>


<style>
    .details {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }
    .person {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    h3, h4 {
        margin: 0;
        line-height: 1;
    }
</style>
